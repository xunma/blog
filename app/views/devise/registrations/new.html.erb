<div class="col-sm-12 col-md-4 col-md-offset-1 form-container">
  <p class="primary-txt">Become a storyteller...</p>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        placeholder: 'Email',
                        label: false,
                        autofocus: true ,
                        input_html: { autocomplete: "email", class: "no-border-form" }
                        %>
                        <hr>
            <%= f.input :first_name,
                        required: true,
                        label: false,
                        placeholder: 'First name',
                        input_html: { autocomplete: "First name", class: "no-border-form" }
                        %>
                        <hr>
            <%= f.input :last_name,
                        required: true,
                        label: false,
                        placeholder: 'Last name',
                        input_html: { autocomplete: "Last name", class: "no-border-form" }
                        %>
                        <hr>
            <%= f.input :password,
                        required: true,
                        placeholder: 'Password (at least 6 characters)',
                        label: false,
                        input_html: { autocomplete: "new-password", class: "no-border-form" }
                        %>
                        <hr>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        placeholder: 'Confirm password',
                        input_html: { autocomplete: "new-password",class: "no-border-form" }
                        %>
                        <hr>

            <%= f.button :submit, "Sign up", class: 'form-btn'
            %>
          </div>
  <% end %>
</div>
<div class="col-sm-0">
      <%= image_tag "writer.gif", width: 400, class: 'form-image' %>
</div>

