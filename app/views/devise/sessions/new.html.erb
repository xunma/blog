<div class="col-sm-12 col-md-4 col-md-offset-1 form-container">
  <p class="primary-txt">Log into your writer's life..</p>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "Email",
                        label: false,
                        input_html: { autocomplete: "email", class: "no-border-form" } %>
                        <hr>
            <%= f.input :password,
                        required: false,
                        placeholder: "Password",
                        label: false,
                        input_html: { autocomplete: "current-password", class: "no-border-form" } %>
                        <hr>
            <%= f.input :remember_me,  as: :boolean if devise_mapping.rememberable? %>
          </div>

            <%= f.button :submit, "Log in", class: 'form-btn' %><br>

            <%= link_to "Sign up", new_user_registration_path, class: 'form-link' %><br>
            <%= link_to "Forgot your password?", new_user_password_path, class: 'form-link' %>

  <% end %>
</div>
<div class="col-xs-0">
      <%= image_tag "writer.jpg", width: 600, class: 'form-image' %>
</div>
