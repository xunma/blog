<%= simple_form_for(@post) do |f| %>
  <%= f.input :title,
              required: true,
              placeholder: "Title",
              label: false  %>
  <%= f.input :date,
              required: true,
              placeholder: "Title",
              label: false  %>
  <%= f.input :published,
              required: true,
              placeholder: "Title",
              label: false  %>
  <%= f.input :content,
              required: true,
              placeholder: "Content",
              label: false %>

  <%= f.button :submit, "Submit", class: 'my-btn' %>
<% end %>
