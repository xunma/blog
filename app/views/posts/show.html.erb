<% owner = current_user == @post.user %>
<div class="container post-show-container">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <div class="primary-txt">
      <%= @post.title %>
    </div>
    <div class="post-info">
      <div class="post-author">
        <%= link_to @post.user.full_name, my_posts_path(@post.user) %>
      </div>
      <div class="text-grey">
        <%= @post.date %> · <%= @post.read_time %> · <%= @post.view %> <%= "view".pluralize(@post.view) %>
      </div>
    </div>
    <% unless owner %>
      <div id="<%="#{@post.id}-post" %>">
        <%= render "shared/mark_button", post: @post %>
      </div>
    <% end %>
    <div class="post-content">
      <%= @post.content %>
    </div>
  </div>
</div>
